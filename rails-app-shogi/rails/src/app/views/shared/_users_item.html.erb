<% users.each do | user | %>
  <%= tag.div class: "user" do %>
    <%= link_to user_path(user) do %>
      <%= tag.span user.name, id: "user_name" %>
    <% end %>

    <% if !current_user.nil? && current_user.admin? %>
      <%= link_to user_path(user), method: :delete,       
      data: { confirm: "本当に削除してよろしいですか？" } ,id: "deleteUrl" do %>
        <%= tag.span "delete", id: "delete" %>
      <% end %>
    <% end %>

  <% end %>
<% end %>