<%= tag.div class: "kifu" do %>
  <%= link_to kifu_path(kifu), data: {turbolinks: false} do %>
    <%= tag.p class: "kifuUrl" do %>
      <% if(kifu.title != "") %>
        <%= kifu.title %>
      <% else %>
        先手：
        <%= tag.span kifu.player1, id: win_or_lose(1,kifu) %>
        <%= tag.span "VS", id: "vs" %>
        後手：
        <%= tag.span kifu.player2, id: win_or_lose(2,kifu) %>
      <% end %>
      <%= tag.span timewithzone_to_str(kifu.created_at,format="%Y年%-m月%-d日%-H時%-M分"), id: "created" %>
    <% end %>
  <% end %>
  <% if my_kifu?(kifu) %>
    <%= link_to kifu_path(kifu), method: :delete, 
    data: {confirm: "本当に削除してよろしいですか？"},
    id:"deleteUrl" do %>
      <%= tag.p do %>
        <%= tag.span "delete", id: "delete" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>