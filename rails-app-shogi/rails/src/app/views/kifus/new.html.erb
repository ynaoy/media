<% provide(:title, '棋譜を追加') %>
<h1>棋譜を追加</h1>
<div class="row justify-content-md-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model:@kifu,class:"form_signup") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :player1, "先手" %>
      <%= f.text_field :player1, class: 'form-control',maxlength:10 %>

      <%= f.label :player2, "後手" %>
      <%= f.text_field :player2, class: 'form-control',maxlength:10 %>

      <div class=form_kifu>
        <%= f.label :content, "棋譜" %>
        <p>※必須</p>
      </div>
      <%= f.text_area :content, size: "0x8", class: 'form-control', required: true %>

      <%= f.submit "作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
